{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "include": [
    "./src/**/*",
    "./typings/custom.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}