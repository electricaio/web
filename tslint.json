{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
      "no-duplicate-imports": false,
      "import-name": false,
      "variable-name" : [true, "ban-keywords"],
      "semicolon": [true, "always", "strict-bound-class-methods"],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "singleline": "never",
          "esSpecCompliant": {
            "type": true
          }
        }
      ]
    },
    "rulesDirectory": []
}