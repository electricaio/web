{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb", "tslint-eslint-rules", "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
      "class-name": true,
      "no-duplicate-imports": true,
      "import-name": false,
      "variable-name": [
        true,
        "allow-leading-underscore",
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ],
      "semicolon": [true, "always", "strict-bound-class-methods"],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "singleline": "never",
          "esSpecCompliant": {
            "type": true
          }
        }
      ]
    },
    "rulesDirectory": []
}
